function showInfo() {

                const today = document.getElementById('vandaag')
                today.addEventListener("click", weatherToday, weatherTomorrow, weatherDayAfterTomorrow);

                function weatherToday() {
                    const temperatuur = document.getElementById('temperatuur');
                    temperatuur.innerHTML = `<font size="5">${data.liveweer[0].d0tmin} / ${data.liveweer[0].d0tmax} ºC</font><br><p>
          <font size="10">${data.liveweer[0].temp}<font size="5">ºC</font></font><br><p>
          <font size="3">voelt aan als:</font><br><font size="5">${data.liveweer[0].gtemp} ºC</font>`;

                    const luchtdruk = document.getElementById('luchtdruk');
                    luchtdruk.innerHTML = `<font size="7"> ${data.liveweer[0].luchtd}</font><font size="4">hPa</font>`;

                    const weer = document.getElementById('weer');
                    weer.innerHTML =
                        `Plaats: ${data.liveweer[0].plaats} <br> Neerslagkans: ${data.liveweer[0].d0neerslag}%, zonkans: ${data.liveweer[0].d0zon}% <br>
        Wind (kracht,snelheid): ${data.liveweer[0].winds} Bft, ${data.liveweer[0].windkmh} km/u<br>
        Verwachting: ${data.liveweer[0].verw} <br>`

                    // Overige info 
                    console.log(`Afbeeldingsnaam: ${data.liveweer[0].image}`);
                    console.log(`Weersgesteldheid: ${data.liveweer[0].samenv}`);
                    console.log(`Relatieve luchtvochtigheid: ${data.liveweer[0].lv}`);
                    console.log(`Dauwpunt:${data.liveweer[0].dauwp}`);
                    console.log(`Zicht in km:${data.liveweer[0].zicht}`);
                    console.log(`Windkracht vandaag:${data.liveweer[0].d0windk}`);
                    console.log(`Windrichting (pijl): ${data.liveweer[0].windr}`);
                    console.log(`Windrichting vandaag: ${data.liveweer[0].d0windr}`);
                    console.log(`Weericoon vandaag: ${data.liveweer[0].d0weer}`);

                    console.log(`Weericoon morgen: ${data.liveweer[0].d1weer}`);

                    console.log(`Weericoon overmorgen: ${data.liveweer[0].d2weer}`);

                    console.log(`Alarm: ${data.liveweer[0].alarm}`);


                    const button = document.querySelector("#button");
                    if (button.childNodes[0]) {
                        button.removeChild(button.childNodes[0])

                    };
                    const newButton = document.createElement("button");
                    newButton.innerHTML = 'Toon vooruitzichten';

                    newButton.onclick = function () {
                        document.getElementById('morgen').classList.toggle('hidden');
                        document.getElementById('overmorgen').classList.toggle('hidden');
                        if (tomorrow.className != 'hidden' && dayAfterTomorrow.className != 'hidden') { newButton.innerHTML = 'Verberg vooruitzichten' }
                        else { newButton.innerHTML = 'Toon vooruitzichten' };
                    };
                    button.appendChild(newButton);

                    //img.src = `iconen-weerlive/${data.liveweer[0].image}.png`;

                }
                weatherToday();

                const tomorrow = document.querySelector("#morgen");
                const dayAfterTomorrow = document.getElementById('overmorgen');

                function weatherTomorrow() {

                    tomorrow.innerHTML =
                        `<span style='text-decoration: underline;'>Morgen:</span> <br>
       
        Min / max temperatuur: ${data.liveweer[0].d1tmin} / ${data.liveweer[0].d1tmax} ºC <br>
        Wind (richting, kracht): ${data.liveweer[0].d1windr}, ${data.liveweer[0].d1windk} Bft<br>
        Neerslagkans: ${data.liveweer[0].d1neerslag}%
        Zonkans: ${data.liveweer[0].d1zon}%`

                    /*
                            const image = document.getElementById('image');
                            const img = document.createElement("img"); 
                            while (image.firstChild) {
                                image.removeChild(image.firstChild);
                            }
                            image.appendChild(img); 
                            img.src = `iconen-weerlive/${data.liveweer[0].image}.png`;
                            */
                }
                weatherTomorrow();


                function weatherDayAfterTomorrow() {

                    // dayAfterTomorrow.appendChild(img);
                    // img.src= "./iconen-weerlive/"+data.liveweer[0].d2weer+".png";

                    dayAfterTomorrow.innerHTML =
                        `<span style='text-decoration: underline;'>Overmorgen:</span> <br>
        Min / max temperatuur: ${data.liveweer[0].d2tmin} / ${data.liveweer[0].d2tmax} ºC <br>
        Wind (richting, kracht): ${data.liveweer[0].d2windr}, ${data.liveweer[0].d2windk} Bft<br>
        Neerslagkans: ${data.liveweer[0].d2neerslag}%
        Zonkans: ${data.liveweer[0].d2zon}%`

                    /*
                    document.getElementById("image")
                    .src = "./iconen-weerlive/"+data.liveweer[0].d2weer+".png";
                   
                    while (image.firstChild) {
                        image.removeChild(image.firstChild);
                    }
                    image.appendChild(img); 
                    img.src = "./iconen-weerlive/"+data.liveweer[0].image+".png";*/

                }
                weatherDayAfterTomorrow();


                let uur = parseInt(new Date().getHours());
                let minuten = parseInt(new Date().getMinutes());
                let hourSu = parseInt(data.liveweer[0].sunder.split(":")[0]);
                let minuteSu = parseInt(data.liveweer[0].sunder.split(":")[1]);
                let hourSr = parseInt(data.liveweer[0].sup.split(":")[0]);
                let minuteSr = parseInt(data.liveweer[0].sup.split(":")[1]);
                if (uur > hourSu || uur == hourSu && minuten > minuteSu || uur < hourSr || uur == hourSr && minuten < minuteSr) {
                    document.body.style.backgroundImage = "url('./pics/Europa_dark.png')";
                }


                let arrow = document.getElementById('arrow');
                arrow.style.visibility = "visible";


                //let speedArrow = 4/data.liveweer[0].winds+"s";
                //arrow.style.transitionDuration = "1.5s";

                let ms;

                function calculateWindSpeed() {
                    const wind = data.liveweer[0].winds;
                    if (wind >= 0 && wind <= 3) {
                        ms = 3000 - (500 * (wind - 1))
                    }
                    else if (wind >= 4 && wind <= 10) {
                        ms = 1750 - (250 * (wind - 4))
                    }
                    else if (wind >= 11) {
                        ms = 150
                    }
                    console.log(`Windkracht: ${wind}; aant. ms:${ms}, windrichting: ${data.liveweer[0].windr}`)
                    return ms;
                }


                function moveArrow(rotate, x, y) {

                    calculateWindSpeed();

                    $('#arrow').animate(
                        [
                            //{ transform: deg},
                            //{ transform: 'translateX(50px)' }, 
                            { transform: x },
                            // { transform: 'translateY(0px)' }, 
                            { transform: y },
                        ], {
                        duration: ms,

                        step: function (now, fx) {
                            $(this).css('-webkit-transform', 'rotate(-45deg))');
                        },


                        iterations: 5
                    })
                    //arrow.style.webkitTransform = `${rotate}`; 
                }

                switch (data.liveweer[0].windr) {
                    case "Noord":
                        arrow.style.webkitTransform = "scale(0.6) rotate(90deg) translateX(100px)";
                        break;
                    case "NNO":
                        arrow.style.webkitTransform = "scale(0.6) rotate(112.5deg)";

                        // arrow.style.AnimationName= "movearrow";
                        break;
                    case "NO":
                        arrow.style.webkitTransform = "scale(0.6) rotate(135deg)";
                        break;
                    case "ONO":
                        arrow.style.webkitTransform = "scale(0.6) rotate(157.5deg)";
                        break;
                    case "Oost":
                        arrow.style.webkitTransform = "scale(0.6) rotate(180deg)";
                        break;
                    case "OZO":
                        arrow.style.webkitTransform = "scale(0.6) rotate(202.5deg)";
                        break;
                    case "ZO":
                        arrow.style.webkitTransform = "scale(0.6) rotate(225deg)";
                        break;
                    case "ZZO":
                        arrow.style.webkitTransform = "scale(0.6) rotate(-112.5deg)";
                        break;
                    case "Zuid":
                        arrow.style.webkitTransform = "scale(0.6) rotate(-90deg)";
                        break;
                    case "ZZW":
                        arrow.style.webkitTransform = "scale(0.6) rotate(-67.5deg)";
                        break;
                    case "ZW":
                        //arrow.style.webkitTransform = "scale(0.6) rotate(-45deg)"; 
                        moveArrow('rotate(-45deg)', 'translateX(-300px)', 'translateY(0px)');
                        break;
                    case "WZW":
                        arrow.style.webkitTransform = "scale(0.6) rotate(-22.5deg)";
                        break;
                    case "WNW":
                        arrow.style.webkitTransform = "scale(0.6) rotate(22.5deg)";
                        break;
                    case "NW":
                        //arrow.style.webkitTransform = "scale(0.6) rotate(45deg)"; 
                        moveArrow('rotate(45deg)', 'translateX(-200px)', 'translateY(200px)')
                        break;
                    case "NNW":
                        arrow.style.webkitTransform = "scale(0.6) rotate(67.5deg)";
                        break;
                    case "West":
                        //arrow.style.webkitTransform = "scale(0.6)";  
                        moveArrow('rotate(0deg)', 'translateX(-300px)', 'translateY(0px)');

                }

                /*
                1: 3000
                2: 2500
                3: 2000
                4: 1750
                5: 1500
                6: 1250
                7: 1000
                8: 750
                9: 500
                10: 250
                11-12: 150
                */




                /*   arrow.animate([
                       { transform: 'translateY(0px)' }, 
                       { transform: 'translateY(-20px)'},
                       { transform: 'translateX(0px)' }, 
                       { transform: 'translateX(-20px)'}
                   ], {duration: 1000})
                   */


            }